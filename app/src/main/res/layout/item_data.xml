<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_item_kelas_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_list"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@color/accent"/>

        <TextView
            android:id="@+id/tv_nama_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_item_list"
            android:layout_toRightOf="@+id/iv_item_list"
            android:text="Belajar Bhs. Inggris"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_nohape_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_item_list"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_item_list"
            android:layout_toRightOf="@+id/iv_item_list"
            android:text="0123"
            android:textColor="@color/secondary_text"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/iv_item_list"
            android:layout_toRightOf="@+id/iv_item_list">

            <TextView
                android:id="@+id/tv_hapus_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:text="HAPUS"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_ubah_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:text="UBAH"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RatingBar
            android:id="@+id/ratingBar_item_list"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
